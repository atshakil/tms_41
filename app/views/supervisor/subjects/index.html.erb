<% provide :title, t(:all_subs) %>

<h1><%= t :subjects %></h1>
<div class="row">
  <div class="col-sm-7 col-sm-offset-0">
    <% if !(@subjects.empty?) %>
    <% @subjects.each do |subject| %>
      <div class="jumbotron">
        <%= link_to supervisor_subject_path(subject) do %>
          <h2><%= subject.name %></h2>
        <% end %>
        <p><%= subject.description %></p>
      </div>
    <% end %>
    <% else %>
      <div class="jumbotron">
        <p><%= t :subject_empty %></p>
      </div>
    <% end %>
  </div>
  <div class=".col-sm-5 pull-right">
    <div class="panel panel-default pull-right">
      <div class="panel-heading"><%= t :activity_text %></div>
      <div class="panel-body">
        <%= render "shared/activity" %>
      </div>
    </div>
  </div>
</div>